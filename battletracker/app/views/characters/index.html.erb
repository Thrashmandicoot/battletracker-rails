<h1>Characters</h1>

<table class="pure-table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Class</th>
      <th>HP</th>
      <th>AC</th>
      <th>Init</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <% @user.characters.each do |character| %>
  <tbody id='charbody'>
    <tr>
      <td><%= character.id %></td>
      <td><%= character.name %></td>
      <td><%= character.job %></td>
      <td><%= character.total_hp %></td>
      <td><%= character.armor_class %></td>
      <td><%= character.initiative %></td>
      <td>
        <a class="ajax pure-button pure-button-active" href='/characters/<%= character.id %>/edit'>Edit Character</a>
      </td>
      <td>
        <a class="pure-button pure-button-active" href='/characters/<%= character.id %>/delete'>Delete</a>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>

</br>
<a class="ajax pure-button pure-button-active" href='/characters/new'>Add Character</a>
