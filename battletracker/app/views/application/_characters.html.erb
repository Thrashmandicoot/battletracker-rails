<table class="pure-table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Class</th>
      <th>HP</th>
      <th>AC</th>
      <th>Init</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <% @user.characters.each do |character| %>
  <tbody id='charbody'>
    <tr>
      <td><%= character.id %></td>
      <td><%= character.name %></td>
      <td><%= character.job %></td>
      <td><%= character.total_hp %></td>
      <td><%= character.armor_class %></td>
      <td><%= character.initiative %></td>
      <td>
        <%= button_to "Edit Character",{ action: 'edit', id: character.id }, method: :get, class: "pure-button pure-button-active" %>
      </td>
      <td>
        <%= button_to "Delete Character",{ action: 'destroy', id: character.id }, method: :delete, data: { confirm: "Are you sure?"}, class: "pure-button pure-button-active" %>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>
