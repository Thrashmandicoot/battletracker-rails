<h1>Campaigns</h1>
<table class="pure-table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Description</th>
      <th>Characters</th>
      <th>Encounters</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <% @campaigns.each do |campaign| %>
    <tbody>
      <tr>
        <td><%= campaign.id %></td>
        <td><%= campaign.title %></td>
        <td><%= campaign.description %></td>
        <td>
          <a class="pure-button pure-button-active" href='/campaigns/<%= campaign.id %>/characters'>Characters</a>
        </td>
        <td>
          <a class="pure-button pure-button-active" href='/campaigns/<%= campaign.id %>/encounters'>Encounters</a>
        </td>
        <td>
          <a class="pure-button pure-button-active" href='/campaigns/<%= campaign.id %>/edit'>Edit</a>
        </td>
        <td>
          <a class="pure-button pure-button-active" href='/campaigns/<%= campaign.id %>/delete'>Delete</a>
        </td>
      </tr>
    </tbody>
  <% end %>
</table>

</br>
<a class="pure-button pure-button-active" href='/campaigns/new'>Add Campaign</a>
